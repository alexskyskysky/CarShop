@using System.Globalization;

<h1>Все автомобили</h1>
<h3>@Model.currentCategory</h3>
<div class="row mt-5 mb-2">
    @{
        foreach (var car in Model.allCars) {
            <div class="col-lg-4">
                <img class="img-thumbnail" src="@car.img" alt="@car.name" />
                <h2>@car.name</h2>
                <p>@car.shortDesc</p>
                <p>Цена: @car.price.ToString("c", CultureInfo.CreateSpecificCulture("en-US"))</p>
                <p><a class="btn-warning" href="#">Подробнее</a></p>
            </div>
        }
    }
</div>